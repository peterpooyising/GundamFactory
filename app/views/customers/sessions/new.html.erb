<div class="container text-center show-box">
  <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs form-style">
        <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Enter email" %>
        <%= f.input :password, required: false, label: false, placeholder: "Enter password" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
    <% end %>
  <br>
  <%= render "customers/shared/links" %>
  <%= link_to 'Admin?', new_admin_session_path %>
  </div>
</div>
